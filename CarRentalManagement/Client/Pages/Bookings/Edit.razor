@page "/bookings/edit/{id:int}"

@inject HttpClient _client
@inject NavigationManager _navManager

<h3 class="card-title">Edit Bookings</h3>

<FormComponent ButtonText="Update" OnValidSubmit="EditBooking" booking="booking" vehicles="Vehicles" customers="Customers"></FormComponent>

@code {
    [Parameter] public int id { get; set; }
    Booking booking = new Booking();

    protected async override Task OnParametersSetAsync()
    {
        booking = await _client.GetFromJsonAsync<Booking>($"{Endpoints.BookingsEndpoint}{id}");
    }

    IList<Vehicle> Vehicles;
    IList<Customer> Customers;

    protected async override Task OnInitializedAsync()
    {
        Vehicles = await _client.GetFromJsonAsync<List<Vehicle>>($"{Endpoints.VehiclesEndpoint}");
        Customers = await _client.GetFromJsonAsync<List<Customer>>($"{Endpoints.CustomersEndpoint}");
    }

    async Task EditBooking()
    {
        await _client.PutAsJsonAsync<Booking>($"{Endpoints.BookingsEndpoint}{id}", booking);
        _navManager.NavigateTo("/colours/");
    }
}
